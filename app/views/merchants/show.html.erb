<h2><%= @merchant.name %></h2>

<%= link_to "My Items", "/merchants/#{@merchant.id}/items" %>
<%= link_to "My Invoices", "/merchants/#{@merchant.id}/invoices" %>

<h3>Favorite Customers</h3>
<ol>
  <% @merchant.top_five_customers.each do |customer| %>
    <li><%= "#{customer.first_name} #{customer.last_name} - #{customer.transaction_count} Purchases" %></li>
  <% end %>
</ol>

<h3>Items Ready to Ship</h3>
<ul>
  <% @merchant.ready_to_ship_items.each do |item| %>
    <li><%= "#{item.name} - Invoice #" %><%=link_to item.invoice_id, "/merchants/#{@merchant.id}/invoices/#{item.invoice_id}"%>
    <%= "- #{item.invoice_created_at.strftime("%A, %B %-d, %Y")}" %></li>
  <% end %>
</ul>
