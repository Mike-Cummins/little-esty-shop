<%= render partial: 'merchants/shared/header' %>

<div class='general_body'>
  <div id='bulk_discounts'>
    <h4>All Discounts: </h4>
    <ul>
      <% @bulk_discounts.each do |discount| %>
      <div id="discount_<%= discount.id %>">
        <li> <%= link_to "#{discount.percentage_discount}% off when you buy #{discount.quantity_threshold}", merchant_bulk_discount_path(@merchant, discount) %>
             <%= button_to "Delete Discount", merchant_bulk_discount_path(@merchant, discount), method: :delete %> 
        </li>
      </div>
      <% end %>
    </ul>
  </div>
</div>

<%= link_to "Create New Discount", new_merchant_bulk_discount_path(@merchant)%>